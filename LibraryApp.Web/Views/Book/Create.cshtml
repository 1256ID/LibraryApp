@model LibraryApp.Web.Models.Book
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html>
<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400..900;1,400..900&family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Library</title>
</head>
<body>
    <div class="container-fluid d-flex flex-column p-5 m-3 align-items-center justify-content-center">
        <div class="row">
            <div class="col-12 p-5 m-5" style="max-width:800px;">
                <h1>Add Book</h1>
                <form asp-controller="Book" asp-action="Create">

                    <div class="col-6">
                        <label asp-for="Title"></label>
                        <input asp-for="Title"/>
                        <span asp-validation-for="Title"></span>
                    </div>

                    <br />

                    <div class="col-6">
                        <label asp-for="Author"></label>
                        <input asp-for="Author" />
                        <span asp-validation-for="Author"></span>
                    </div>

                    <br />

                    <div class="col-6">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" />
                        <span asp-validation-for="Description"></span>
                    </div>

                    <br />

                    <input class="btn-dark" type="submit" value="Create" />

                </form>
            </div>
        </div>
    </div>
    
    <footer class="container-fluid bg-dark text-white py-3 text-center mt-auto p-5">
        &copy; 2025 LibraryApp. Alla rättigheter förbehållna.
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

